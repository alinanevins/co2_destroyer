<div class="container">
  <h1>Edit your Tree</h1>

  <div class="row">
    <form class="col s12">
      <%= form_for @tree do |f| %>
      <div class="row">
        <div class="input-field col s6"><%= f.label :name %>
          <%= f.text_field :name %></p>
        </div>

        <div class="input-field col s6"><%= f.label :species %><%= f.text_field :species %></p>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6"><%= f.label :diameter %><%= f.text_field :diameter %></p>
        </div>

        <div class="input-field col s6"><%= f.label :mass %><%= f.text_field :mass %></p>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6"><%= f.label :co2_removed %><%= f.text_field :co2_removed %></p>
        </div>

        <div class="input-field col s6"><%= f.label :user_id %> <%= f.text_field :user_id %></p>
        </div>
      </div>


      <div class="row">
        <div class="col s6">
          <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit %>
          </button>
        </div>
        <% end %>
        <div class="col s6">
          <%= link_to "Delete this tree", tree_path(@tree.id), method: 'delete' %>
        </div>
      </div>
    </form>
  </div>
</div>
