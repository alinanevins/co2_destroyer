<div class="container">
  <h2>Sign up</h2>
  <div class="row">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s6"><%= f.label :first_name %><%= f.text_field :first_name %></p>
    </div>

    <div class="input-field col s6"><%= f.label :last_name %><%= f.text_field :last_name %></p>
    </div>
  </div>

<div class="row">
  <div class="input-field col s6">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="input-field col s6"><%= f.label :university_or_school %><%= f.text_field :university_or_school %></p>
  </div>
</div>

<div class="row">
  <div class="input-field col s6">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="input-field col s6">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
</div>

  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= f.submit "Sign up" %></button>
  </div>
<% end %>

<p>Or, <%= render "devise/shared/links" %>
</div>
