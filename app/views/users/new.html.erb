<div class="container">
  <h1>Create a New Account</h1>
  <div class="row">
    <%= form_for(@user) do |f| %>

    <div class="row">
      <div class="input-field col s6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="input-field col s6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="input-field col s6">
        <%= f.label :university_or_school %>
        <%= f.text_field :university_or_school %>
      </div>
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit %></button>
    <% end %>
  </div>
</div>
