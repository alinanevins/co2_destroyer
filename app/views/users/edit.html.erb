<div class="container">
  <h1>Edit your Account Information</h1>

  <div class="row">
    <form class="col s12">
      <%= form_for @user do |f| %>
      <div class="row">
        <div class="input-field col s6"><%= f.label :first_name %><%= f.text_field :first_name %></p>
        </div>

        <div class="input-field col s6"><%= f.label :last_name %><%= f.text_field :last_name %></p>
        </div>
      </div>


      <div class="row">
        <div class="input-field col s6"><%= f.label :email %><%= f.text_field :email %></p>
        </div>


        <div class="input-field col s6"><%= f.label :university_or_school %><%= f.text_field :university_or_school %></p>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <%= f.submit %>
          <% end %>
        </div>

        <div class="input-field col s6">
          <%= link_to "Delete your account", user_path(@user.id), method: 'delete' %>
        </div>
      </div>
    </div>
  </div>
